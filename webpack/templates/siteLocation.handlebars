<li class="site-card rounded-lg mt-4 pt-4 pb-4 relative grid grid-cols-1
    divide-y border-gray-00">
  <div
    class="px-2 md:px-4 pb-2 flex flex-row space-s-2 justify-between items-center"
  >
    <!-- Name and address -->
    <div class="flex flex-col overflow-hidden">
      <h4 dir="ltr" class="site_title text-lg font-bold leading-6 text-gray-900 truncate" >
        {{ name }}
      </h4>
      <div class="site_location_info flex flex-row items-center">
        {{#if county}}
        <a
          class="site_county text-sm font-medium hover:underline whitespace-nowrap"
          href="{{ countyLink }}"
          >{{ county }}</a>
        {{/if}}
        {{#if address}}
        <span class="address_separator px-2" aria-hidden="true">Â·</span>
        <a
          dir="ltr"
          class="site_address text-sm hover:underline truncate"
          target="_blank"
          rel="noreferrer"
          href="{{addressLink}}"
        >{{address}}</a>
        {{/if}}
      </div>
    </div>
    <!-- Last report on desktop -->
    {{#if hasReport }}
    <div
      class="site_last_report_date text-xs text-black bg-gray-200 px-2 py-1 rounded-full hidden md:flex whitespace-nowrap"
      >{{ lastReportTime  }}</div>
    {{/if}}
  </div>
  {{#if hasReport}}
    <div class="relative grid grid-cols-12 py-2">
      <div
        class="site_vaccine_status py-2 px-4 h-full text-sm md:text-base
        space-s-2 col-span-9 md:col-span-12"
      >
        {{#if hasVaccine}}
        <div class="vaccine_available flex flex-row items-center space-s-2">
          <img src="/assets/img/checkmark.svg" />
          <span class="font-sm font-bold text-green-600"
            >{{ hasVaccineLabel }}</span
          >
        </div>
        {{/if}}

        {{#if noVaccine}}
        <div class="vaccine_not_available flex flex-row items-center space-s-2">
          <img src="/assets/img/missing.svg" />
          <span class="font-sm font-bold text-red-500"
            >{{ noVaccineLabel }}</span
          >
        </div>
        {{/if}}

        {{#if unknownVaccine}}
        <div class="vaccine_unknown flex flex-row items-center space-s-2">
          <img src="/assets/img/question_mark.svg" />
          <span class="font-sm font-bold text-gray-400"
            >{{ unknownVaccineLabel }}</span
          >
        </div>
        {{/if}}
      </div>
    {{#if hasVaccine}}
      <div
        class="site_last_report_date text-xs text-black bg-gray-200 px-2 py-1 rounded-full col-span-3 self-center justify-self-center md:hidden"
        >{{ lastReportTime }}</div>
      <!-- Divider -->
      <div
        class="col-span-12 border-b border-gray-100 my-2"
      ></div>
      <div class="py-2 px-4 h-full flex flex-col items-center text-sm md:text-base col-span-12">
        {{#each restrictions}}
        <span>{{{this}}}</span>
        {{/each}}
        </div>
      </div>
      {{#if appointmentRequired }}
        <div
          class="site_appointment_required px-4 py-4 flex flex-row items-center border-b border-gray-100 text-sm"
        >
        <div class="me-2 flex-none"><img src="/assets/img/calendar.svg" /></div>
          <div>
            <span class="font-bold pe-2"
              >{{ appointmentRequiredLabel }}</span
            >
            <span dir="ltr" class="site_appointment_details text-black
            word-break">{{{appointmentInstructions}}}</span>
          </div>
        </div>
      {{/if}}
    {{/if}}
    </div>
  {{/if}}
  {{#if providerInfo }}
    <div class="px-4 py-4 text-sm">
      <div class="flex flex-row">
        <span class="font-bold pe-2">{{ providerInfoLabel }}</span>
      </div>
      <div dir="ltr" class="text-left word-break">
        {{{ providerInfo }}}
      </div>
    </div>
  {{/if}}
  {{#if hasReport }}
    {{#if notes}}
      <div
        class="site_latest_info px-4 py-4 flex flex-row items-center text-sm"
      >
        <div class="w-full">
          <span class="font-bold pe-2 flex flex-row">
            <img class="inline pe-2" src="/assets/img/info.svg"
                                     /><div>{{latestNotesLabel}}</div>
          </span>
          <div dir="ltr" class="site_latest_info_details text-left text-black
                        word-break">{{{notes}}}</div>
        </div>
      </div>
    {{/if}}
  {{else}}
    <div class="site_no_report px-2 md:px-4 pt-3">
      {{ noReports }}
    </div>
  {{/if}}
</li>
