<div class="mapInfo">
  <h1 class="text-green-600">
    {{name}}
  </h1>
  {{#if superSite}}
    <b class="text-lg supersite-tag">
      {{superSiteLabel}}
    </b>
    <br />
  {{/if}}

  <b>
    {{detailsLabel}}:
  </b>
  {{details}}<br />

  {{#if schedulingInstructions}}
    <b>
      {{schedulingInstructionsLabel}}:
    </b>
    {{{schedulingInstructions}}}
    <br />
  {{/if}}

  {{#if address}}
    <b>
      {{addressLabel}}:
    </b>
    {{address}}<br />
  {{/if}}

  {{#if reportNotes}}
    <b>
      {{reportNotesLabel}}:
    </b>
    {{reportNotes}}<br />
  {{/if}}
</div>
